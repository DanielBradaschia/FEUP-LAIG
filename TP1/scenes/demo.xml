<lxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <primitives>
        
        <primitive id="demoRectangle">
            <rectangle x1="-0.5" y1="-1" x2="0.5" y2="1" />
        </primitive>

        <primitive id="demoTriangle">
            <triangle x1="-0.5" y1="-1" z1="0" x2="0.5" y2="1" z2="0" x3="3" y3="2" z3="0"/>
        </primitive>
      
        <primitive id="demoCylinder">
          <cylinder slices="20" stacks="20" baseRadius="2" topRadius="0" height="4"/>
        </primitive>

        <primitive id="demoSphere">
          <sphere radius="2" slices="20" stacks="20"/>
        </primitive>
        
        <primitive id="demoTorus">
          <torus innerRadius="1" outerRadius="5" slices="20" loops="10"/>
        </primitive>
    
        <primitive id="tableLeg">
            <cylinder slices="10" stacks="30" baseRadius="0.1" topRadius="0.1" height="2.2"/>
        </primitive>
    </primitives>

    <components>
        <component id="demoRoot">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
            <!--
                <primitiveref id="demoRectangle" />
                <primitiveref id="demoTriangle" />
                <primitiveref id="demoCylinder" />
                <primitiveref id="demoSphere" />
                <primitiveref id="demoTorus" />
            -->
                <componentref id="table" />
                <componentref id="ball" />
                <componentref id="floater" />
            </children>
        </component>

        <component id="floater">
            <transformation>
                <translate x="1.75" y="1" z="1.5" />
                <rotate axis="x" angle="-17" />
                <scale x="0.175" y="0.175" z="0.175" />

            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="demoTorus" />
            </children>
        </component>

        <component id="ball">
            <transformation>
                <translate x="0" y="2.75" z="0" />
                <scale x="0.3" y="0.3" z="0.3" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="demoSphere" />
            </children>
        </component>

        <component id="table">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="tableLegBottomLeft" />
                <componentref id="tableLegBottomRight" />
                <componentref id="tableLegTopLeft" />
                <componentref id="tableLegTopRight" />
                <componentref id="tableTop" />
            </children>
        </component>

        <component id="tableLegBottomLeft">
            <transformation>
                <translate x="-1.9" y="0" z="-1.1" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="tableLeg" />
            </children>
        </component>

        <component id="tableLegBottomRight">
            <transformation>
                <translate x="1.9" y="0" z="-1.1" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="tableLeg" />
            </children>
        </component>

        <component id="tableLegTopLeft">
            <transformation>
                <translate x="-1.9" y="0" z="1.1" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="tableLeg" />
            </children>
        </component>

        <component id="tableLegTopRight">
            <transformation>
                <translate x="1.9" y="0" z="1.1" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="tableLeg" />
            </children>
        </component>
        
        <component id="tableTop">
            <transformation>
                <translate x="0" y="2.2" z="0" />
                <scale x="2.35" y="2.35" z="2.35"/>
                <rotate axis="x" angle="-90" />
                <rotate axis="z" angle="-90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

    </components>
</lxs>