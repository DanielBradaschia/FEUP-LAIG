<lxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="./scenes/images/vidral.jpg" />
        <texture id="floaterTexture" file="./scenes/images/floater.jpg" />
        <texture id="tableLegTexture" file="./images/metal.jpg" />
        <texture id="ballTexture" file="./images/ball.jpg" />
        <texture id="chairTexture" file="./images/chair.jpg" />
        <texture id="tableTexture" file="./images/table.jpg" />
        <texture id="boarderTexture" file="./images/boarder.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
    
        <material id="emeraldMaterial" shininess="76.8">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.0215" g="0.1745" b="0.0215" a="0.55" />
            <diffuse r="0.07568" g="0.61424" b="0.07568" a="0.55" />
            <specular r="0.633" g="0.727811" b="0.633" a="0.55" />
        </material>
    </materials>

    <transformations>

        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>

        <transformation id="tableLegRotation">
            <rotate axis="x" angle="-90" />
        </transformation>

    </transformations>

    <primitives>
        
        <primitive id="demoRectangle">
            <rectangle x1="-0.5" y1="-1" x2="0.5" y2="1" />
        </primitive>

        <primitive id="demoTriangle">
            <triangle x1="-0.5" y1="-1" z1="0" x2="0.5" y2="1" z2="0" x3="3" y3="2" z3="0"/>
        </primitive>
      
        <primitive id="demoCylinder">
          <cylinder slices="20" stacks="20" baseRadius="2" topRadius="0" height="4"/>
        </primitive>

        <primitive id="demoSphere">
          <sphere radius="2" slices="20" stacks="20"/>
        </primitive>
        
        <primitive id="demoTorus">
          <torus innerRadius="1" outerRadius="5" slices="20" loops="20"/>
        </primitive>
    
        <primitive id="tableLeg">
            <cylinder slices="10" stacks="30" baseRadius="0.1" topRadius="0.1" height="2.2"/>
        </primitive>

        <primitive id="poolBoarder">
            <cylinder slices="10" stacks="30" baseRadius="0.3" topRadius="0.3" height="10"/>
        </primitive>
        
        <primitive id="parasolArm">
            <cylinder slices="10" stacks="30" baseRadius="0.1" topRadius="0.1" height="6"/>
        </primitive>

        <primitive id="parasolTop">
            <cylinder slices="6" stacks="30" baseRadius="4" topRadius="0" height="1.5"/>
        </primitive>

    </primitives>

    <components>
       <component id="demoRoot">
            <transformation>
                <scale x="0.5" y="0.5" z="0.5" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
            <!--
                <primitiveref id="demoRectangle" />
                <primitiveref id="demoTriangle" />
                <primitiveref id="demoCylinder" />
                <primitiveref id="demoSphere" />
                <primitiveref id="demoTorus" />
            -->
                <componentref id="table" />
                <componentref id="ball" />
                <componentref id="floater1" /> <!-- floater by the table -->
                <componentref id="floater2" /> <!-- floater on pool -->
                <componentref id="pool" />
                <componentref id="parasol1" /> <!-- parasol by the table -->
                <componentref id="chair1" />
                <componentref id="chair2" />
                <componentref id="sun" />
                <componentref id="floor" />
            </children>
       </component>
      
        <component id="floor">
            <transformation>
                <translate x="0" y="-0.3" z="0" />
                <rotate axis="x" angle="-90" />
                <scale x="20" y="12" z="1" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>
        
       <component id="sun">
            <transformation>
                <translate x="-7" y="7" z="-7" />
                <scale x="0.7" y="0.7" z="0.7" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="demoSphere" />
            </children>
       </component>

       <component id="chair2">
            <transformation>
                <translate x="1" y="0.2" z="-8" />
                <scale x="1.5" y="1.5" z="1.5" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="chairBase2" />
                <componentref id="chairBase1" />
                <componentref id="chairLeg1" />
                <componentref id="chairLeg2" />
            </children>
        </component>

       <component id="chair1">
            <transformation>
                <translate x="-2" y="0.2" z="-8" />
                <scale x="1.5" y="1.5" z="1.5" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="chairBase2" />
                <componentref id="chairBase1" />
                <componentref id="chairLeg1" />
                <componentref id="chairLeg2" />
            </children>
        </component>

        <component id="chairLeg1">
            <transformation>
                <scale x="0.1" y="0.05" z="0.1" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="demoTorus" />
            </children>
        </component>

        <component id="chairLeg2">
            <transformation>
                <translate x="0" y="0" z="-1.0" />
                <scale x="0.1" y="0.05" z="0.1" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="demoTorus" />
            </children>
        </component>

        <component id="chairBase1">
            <transformation>
                <translate x="0" y="0.3" z="-0.5" />
                <rotate axis="x" angle="-90" />
                <scale x="1" y="0.75" z="1" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="chairBase2">
            <transformation>
                <translate x="0" y="0.685" z="-1.2" />
                <rotate axis="x" angle="-40" />
                <scale x="1" y="0.5" z="1" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

       <component id="parasol1">
            <transformation>
                <translate x="-8.5" y="-0.3" z="0" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="parasolArm" />
                <componentref id="parasolTop" />
            </children>
        </component>

        <component id="parasolTop">
            <transformation>
                <translate x="0" y="5.5" z="0" />
                <transformationref id="tableLegRotation" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="parasolTop" />
            </children>
        </component>

        <component id="parasolArm">
            <transformation>
                <transformationref id="tableLegRotation" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="parasolArm" />
            </children>
        </component>

        <component id="poolTop">
            <transformation>
                <rotate axis="x" angle="-90" />
                <scale x="5" y="5" z="5" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="poolBoarder_1">
            <transformation>
                <translate x="-2.5" y="0" z="-5" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="poolBoarder" />
            </children>
        </component>

        <component id="poolBoarder_2">
            <transformation>
                <translate x="2.5" y="0" z="-5" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="poolBoarder" />
            </children>
        </component>

        <component id="poolBoarder_3">
            <transformation>
                <translate x="2.5" y="0" z="-5" />
                <rotate axis="y" angle="-90" />
                <scale x="1" y="1" z="0.5" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="poolBoarder" />
            </children>
        </component>

        <component id="poolBoarder_4">
            <transformation>
                <translate x="2.5" y="0" z="5" />
                <rotate axis="y" angle="-90" />
                <scale x="1" y="1" z="0.5" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="poolBoarder" />
            </children>
        </component>

        <component id="pool">
            <transformation>
                <scale x="1.5" y="1" z="1" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="poolTop" />
                <componentref id="poolBoarder_1" />
                <componentref id="poolBoarder_2" />
                <componentref id="poolBoarder_3" />
                <componentref id="poolBoarder_4" />
            </children>
        </component>

        <component id="floater1">
            <transformation>
                <translate x="-5.5" y="0.73" z="1.6" />
                <rotate axis="y" angle="90" />
                <rotate axis="x" angle="-17" />
                <scale x="0.175" y="0.175" z="0.175" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="demoTorus" />
            </children>
        </component>

        <component id="floater2">
            <transformation>
                <translate x="0.5" y="0" z="0.7" />
                <rotate axis="x" angle="-90" />
                <scale x="0.2" y="0.2" z="0.2" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="demoTorus" />
            </children>
        </component>

        <component id="ball">
            <transformation>
                <translate x="-6.5" y="0.3" z="-1" />
                <scale x="0.3" y="0.3" z="0.3" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="demoSphere" />
            </children>
        </component>

        <component id="table">
            <transformation>
                <translate x="-7" y="-0.3" z="0" />
                <rotate axis="y" angle="-90"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="tableLegBottomLeft" />
                <componentref id="tableLegBottomRight" />
                <componentref id="tableLegTopLeft" />
                <componentref id="tableLegTopRight" />
                <componentref id="tableTop" />
            </children>
        </component>

        <component id="tableLegBottomLeft">
            <transformation>
                <translate x="-1.9" y="0" z="-1.1" />
                <transformationref id="tableLegRotation" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="tableLeg" />
            </children>
        </component>

        <component id="tableLegBottomRight">
            <transformation>
                <translate x="1.9" y="0" z="-1.1" />
                <transformationref id="tableLegRotation" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="tableLeg" />
            </children>
        </component>

        <component id="tableLegTopLeft">
            <transformation>
                <translate x="-1.9" y="0" z="1.1" />
                <transformationref id="tableLegRotation" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="tableLeg" />
            </children>
        </component>

        <component id="tableLegTopRight">
            <transformation>
                <translate x="1.9" y="0" z="1.1" />
                <transformationref id="tableLegRotation" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="tableLeg" />
            </children>
        </component>
        
        <component id="tableTop">
            <transformation>
                <translate x="0" y="2.2" z="0" />
                <scale x="2.35" y="2.35" z="2.35"/>
                <rotate axis="x" angle="-90" />
                <rotate axis="z" angle="-90" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

    </components>
</lxs>
